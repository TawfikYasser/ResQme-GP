<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:focusable="true"
android:layout_marginRight="12dp"
android:layout_marginLeft="12dp"
android:layout_marginTop="12dp"
app:cardCornerRadius="8dp"
app:strokeWidth="0.5dp"
app:strokeColor="@color/purple_200"
app:cardElevation="0dp"
android:layout_height="wrap_content">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:clickable="true"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/purple_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="طلب سابق لونش"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/winch_request_item_description_1_txt"
            android:layout_gravity="right"
            android:layout_margin="12dp"
            android:text="الوصف المرفق بطلبك"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/winch_request_item_description_txt_car_history"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black"
            android:text="الوصف"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_margin="8dp"
            android:background="@color/color_gray_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/request_details_item_fixed_1_txt"
            android:layout_gravity="right"
            android:layout_margin="12dp"
            android:text="ما تم اصلاحه"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/request_details_fixed_item_txt_car_history"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black"
            android:text="ما تم اصلاحه"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_margin="8dp"
            android:background="@color/color_gray_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/winch_request_item_cost_1_txt"
            android:layout_gravity="right"
            android:layout_margin="12dp"
            android:text="تكلفة الخدمة (بالجنيه)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/winch_request_service_cost_txt_car_history"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black"
            android:text="التكلفة"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_margin="8dp"
            android:background="@color/color_gray_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/winch_request_item_time_1_txt"
            android:layout_gravity="right"
            android:layout_margin="12dp"
            android:text="وقت إنشاء الطلب"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/winch_request_timestamp_txt_car_history"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:text="الوقت"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>


</com.google.android.material.card.MaterialCardView>