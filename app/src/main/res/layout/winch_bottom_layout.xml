<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet_winch_linear_layout"
    android:background="@drawable/winch_bottom_sheet_backgroun"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/linear_layout_breaker"
        android:layout_width="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_height="5dp"/>
    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="طلب ونش"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:id="@+id/winch_bottom_welcome_txt"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="مرحباً"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:textStyle="bold"
        android:text="اسلوب جديد لمساعدتك ع الطريق"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:background="@color/color_gray_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/dummy_icon_winch_bottom_sheet"
            android:src="@drawable/winch_marker"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <LinearLayout
            app:layout_constraintRight_toLeftOf="@id/dummy_icon_winch_bottom_sheet"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="24dp"
            android:orientation="vertical"
            android:weightSum="2"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/winch_bottom_sheet_name_txt"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="اسم الونش"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#299F0D"
                android:text="موثوق"
                android:gravity="right"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_baseline_verified_24"
                android:drawablePadding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/winch_bottom_sheet_service_cost_txt"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/blue_back"
            android:text="تكلفة الرحلة"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/winch_bottom_sheet_service_distance_txt"
            android:layout_marginRight="24dp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:text="• المسافة التقريبية "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="48dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:id="@+id/btnSheet"
        android:textStyle="bold"
        android:layout_margin="24dp"
        android:text="أطلب الآن"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_gravity="right"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:drawableRight="@drawable/ic_baseline_info_24"
        android:drawablePadding="12dp"
        android:text="بالضغط على ( أطلب الآن ) سيتم تحويلك الى صفحة لإضافة وصف سيتم إرساله مع الطلب حتى يتمكن صاحب الونش من تقديم أفضل مساعدة، وبعد ذلك سيتم تحويلك الى صفحة الدفع وإذا تمت العملية بنجاح سيتم إرسال الطلب."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>