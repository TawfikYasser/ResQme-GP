<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customer.CustomerProfile">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_customer_profile"
            android:layout_width="match_parent"
            android:tooltipText="رجوع"
            android:layout_height="?attr/actionBarSize"
            app:title="الصفحة الشخصية"
            app:titleTextAppearance="@font/fontlight"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"/>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/customer_profile_profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="24dp"
                android:src="@drawable/chooseimage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:text="البيانات الشخصية" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="@color/color_gray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="اسم المستخدم"
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/username_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:text="اسم المستخدم"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="البريد الإلكتروني"
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/email_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:text="البريد الإلكتروني"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="العنوان"
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/address_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:gravity="right"
                    android:text="العنوان"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="تاريخ الميلاد"
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/dob_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:text="تاريخ الميلاد"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="رقم الواتساب"
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/whatsapp_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:text="رقم الواتساب"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="الجنس"
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/gender_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:text="الجنس"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="نوع الحساب"
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/userType_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:text="نوع الحساب"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="التقييم العام / 5"
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/userRate_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:text="التقييم"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:background="@color/color_gray_3" />

            <Button
                android:id="@+id/add_car_data_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/fontlight"
                android:text="إضافة بيانات العربية"
                app:icon="@drawable/ic_baseline_add_box_24" />

            <TextView
                android:id="@+id/car_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/fontbold"
                android:text="حالة العربية"
                android:textStyle="bold"
                android:visibility="gone" />


            <!-- CAR DATA -->

            <TextView
                android:id="@+id/car_data_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:text="بيانات العربية"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/car_data_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="@color/color_gray"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="نوع العربية"
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/car_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:text="نوع العربية"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="موديل سنة..."
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/car_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:text="موديل سنة..."
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="موعد الصيانة"
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/car_maintenance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:gravity="right"
                    android:text="موعد الصيانة"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="ناقل الحركة"
                    android:textColor="@color/color_gray_2" />

                <TextView
                    android:id="@+id/car_trnasmission_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/resqmefont"
                    android:text="ناقل الحركة"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="رخصة السائق"
                    android:textColor="@color/color_gray_2" />

                <ImageView
                    android:id="@+id/driver_licence_image_after_approval"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="24dp"
                    android:src="@drawable/driverlisenceimage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:text="رخصة العربية"
                    android:textColor="@color/color_gray_2" />

                <ImageView
                    android:id="@+id/car_licence_image__after_approval"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="24dp"
                    android:src="@drawable/driverlisenceimage" />
            </LinearLayout>


            <!--      END OF CAR      -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:background="@color/color_gray_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:text="تاريخ الطلبات" />


            <Button
                android:id="@+id/car_history_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/fontlight"
                android:text="تاريخ طلبات الونش لعربيتك"
                app:icon="@drawable/ic_car_history" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:background="@color/color_gray_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:text="تحديث بيانات الصفحة الشخصية" />


            <Button
                android:id="@+id/update_profile_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/fontlight"
                android:text="تحديث بيانات الصفحة الشخصية"
                app:icon="@drawable/ic_baseline_update_24" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>