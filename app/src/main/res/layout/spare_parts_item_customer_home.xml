<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="12dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/color_gray_3"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:transitionName="image"
                android:id="@+id/spare_parts_item_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:transitionName="description"
                android:textAlignment="gravity"
                android:layout_gravity="right"
                android:id="@+id/spare_parts_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:text="اسم قطعة الغيار"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:gravity="right"
                android:textAlignment="gravity"
                android:layout_gravity="right"
                android:id="@+id/spare_parts_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:text="سعر قطعة الغيار"
                android:textColor="@color/logo_color"
                android:textStyle="bold" />

            <TextView
                android:gravity="right"
                android:textAlignment="gravity"
                android:layout_gravity="right"
                android:id="@+id/spare_parts_item_sp_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_round_star_24"
                android:layout_marginTop="12dp"
                android:text="تقييم مقدم الخدمة"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_item_to_cart_spare_parts_item_adapter"
                android:layout_width="wrap_content"
                app:icon="@drawable/ic_baseline_shopping_cart_24"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="أضف الى عربة التسوق"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#299F0D"
                    android:text="موثوق"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_baseline_verified_24"
                    android:drawablePadding="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/most_asked_layout_spare_parts"
                    android:textColor="#EC780B"
                    android:text="الأكثر طلباً بناءً على نشاطك"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_baseline_whatshot_24"
                    android:drawablePadding="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>