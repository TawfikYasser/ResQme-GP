<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Filter_Linear_Layout"
    android:background="@drawable/winch_bottom_sheet_backgroun"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:gravity="right"
            android:layout_margin="8dp"
            android:text="اعمل فلتر لمراكز الخدمة على حسب نوع العربيات المدعومة"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:padding="18dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupcmc"
                app:singleSelection="false"
                app:selectionRequired="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">
                <com.google.android.material.chip.Chip
                    android:id="@+id/ياباني"
                    android:layout_width="wrap_content"
                    style="@style/CustomChipStyle"
                    android:layout_height="wrap_content"
                    android:text="ياباني"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/أمريكي"
                    android:layout_width="wrap_content"
                    style="@style/CustomChipStyle"
                    android:layout_height="wrap_content"
                    android:text="أمريكي"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/صيني"
                    android:layout_width="wrap_content"
                    style="@style/CustomChipStyle"
                    android:layout_height="wrap_content"
                    android:text="صيني"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/تايواني"
                    android:layout_width="wrap_content"
                    style="@style/CustomChipStyle"
                    android:layout_height="wrap_content"
                    android:text="تايواني"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/ألماني"
                    android:layout_width="wrap_content"
                    style="@style/CustomChipStyle"
                    android:layout_height="wrap_content"
                    android:text="ألماني"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/فرنسي"
                    android:layout_width="wrap_content"
                    style="@style/CustomChipStyle"
                    android:layout_height="wrap_content"
                    android:text="فرنسي"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/هندي"
                    android:layout_width="wrap_content"
                    style="@style/CustomChipStyle"
                    android:layout_height="wrap_content"
                    android:text="هندي"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/إيطالي"
                    android:layout_width="wrap_content"
                    style="@style/CustomChipStyle"
                    android:layout_height="wrap_content"
                    android:text="إيطالي"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/كوري"
                    android:layout_width="wrap_content"
                    style="@style/CustomChipStyle"
                    android:layout_height="wrap_content"
                    android:text="كوري"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/عام"
                    android:layout_width="wrap_content"
                    style="@style/CustomChipStyle"
                    android:layout_height="wrap_content"
                    android:text="عام"/>


            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Get_Search_CMC_Result"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:backgroundTint="@color/green_color"
            android:text="تطبيق"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>