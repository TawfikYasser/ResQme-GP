<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/color_gray_3"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/spare_parts_item_image_sp_home"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:layout_gravity="right"
            android:id="@+id/spare_parts_item_name_sp_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:text="اسم قطعة الغيار"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_gravity="right"
            android:id="@+id/spare_parts_item_price_sp_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:text="سعر قطعة الغيار"
            android:textColor="@color/logo_color"
            android:textStyle="bold" />

        <TextView
            android:layout_gravity="right"
            android:id="@+id/spare_parts_item_status_sp_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:text="حالة قطعة الغيار"
            android:textStyle="bold" />

        <TextView
            android:layout_gravity="right"
            android:id="@+id/spare_parts_item_availability_sp_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:text="متاح؟"
            android:textStyle="bold" />

        <TextView
            android:layout_gravity="right"
            android:id="@+id/spare_parts_item_car_brand_sp_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:text="نوع العربية المعدومة"
            android:textStyle="bold" />
        <TextView
            android:layout_gravity="right"
            android:id="@+id/spare_parts_item_new_used_sp_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:text="جديد / مستعمل"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/spare_parts_sp_home_change_availability_btn"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="غير حالة القطعة متاح او غير متاح"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>