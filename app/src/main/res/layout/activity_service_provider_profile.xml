<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".serviceProvider.ServiceProviderProfile">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_sp_profile"
            android:layout_width="match_parent"
            android:tooltipText="رجوع"
            android:layout_height="?attr/actionBarSize"
            app:title="الصفحة الشخصية"
            app:titleTextAppearance="@font/fontlight"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"/>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sp_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:src="@drawable/chooseimage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp"
            android:text="البيانات الشخصية" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@color/color_gray"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:text="اسم المستخدم"
                android:textColor="@color/color_gray_2" />

            <TextView
                android:id="@+id/sp_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/resqmefont"
                android:text="اسم المستخدم"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:text="البريد الإلكتروني"
                android:textColor="@color/color_gray_2" />

            <TextView
                android:id="@+id/sp_email_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/resqmefont"
                android:text="البريد الإلكتروني"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:text="العنوان"
                android:textColor="@color/color_gray_2" />

            <TextView
                android:id="@+id/sp_address_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/resqmefont"
                android:gravity="right"
                android:text="العنوان"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:text="تاريخ الميلاد"
                android:textColor="@color/color_gray_2" />

            <TextView
                android:id="@+id/sp_dob_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/resqmefont"
                android:text="تاريخ الميلاد"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:text="رقم الواتساب"
                android:textColor="@color/color_gray_2" />

            <TextView
                android:id="@+id/sp_whatsapp_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/resqmefont"
                android:text="رقم الواتساب"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:text="الجنس"
                android:textColor="@color/color_gray_2" />

            <TextView
                android:id="@+id/sp_gender_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/resqmefont"
                android:text="الجنس"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:text="نوع الحساب"
                android:textColor="@color/color_gray_2" />

            <TextView
                android:id="@+id/spType_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/resqmefont"
                android:text="نوع الحساب"
                android:textColor="@color/black"
                android:textStyle="bold" />

                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="right"
                                 android:layout_marginTop="24dp"
                                 android:layout_marginRight="24dp"
                                 android:text="التقييم العام / 5"
                                 android:textColor="@color/color_gray_2" />

                             <TextView
                                 android:id="@+id/spRate_profile_text"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="right"
                                 android:layout_marginTop="12dp"
                                 android:layout_marginRight="24dp"
                                 android:layout_marginBottom="24dp"
                                 android:fontFamily="@font/resqmefont"
                                 android:text="التقييم"
                                 android:textColor="@color/black"
                                 android:textStyle="bold" />
                         </LinearLayout>

                 <Button
                     android:id="@+id/update_sp_profile_button"
                     style="?attr/materialButtonOutlinedStyle"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginLeft="24dp"
                     android:layout_marginRight="24dp"
                     android:layout_marginBottom="24dp"
                     android:fontFamily="@font/fontlight"
                     android:text="تحديث بيانات الصفحة الشخصية"
                     app:icon="@drawable/ic_baseline_update_24" />

             </LinearLayout>
         </ScrollView>

     </LinearLayout>
