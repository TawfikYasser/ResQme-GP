<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/purple_200"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:clickable="true"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/purple_200"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="طلب ونش"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/winch_request_item_status_1_txt"
                android:layout_gravity="right"
                android:layout_margin="12dp"
                android:text="حالة الطلب"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_status_txt"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black"
                android:text="حالة الطلب"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_margin="8dp"
                android:background="@color/color_gray_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/winch_request_item_winchname_1_txt"
                android:layout_gravity="right"
                android:layout_margin="12dp"
                android:text="اسم الونش"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_winch_name_txt"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black"
                android:text="اسم الونش"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_margin="8dp"
                android:background="@color/color_gray_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/winch_request_item_winchownername_1_txt"
                android:layout_gravity="right"
                android:layout_margin="12dp"
                android:text="اسم مالك الونش"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_winch_owner_name_txt"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black"
                android:text="اسم مالك الونش"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_margin="8dp"
                android:background="@color/color_gray_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/winch_request_item_winchownerphone_1_txt"
                android:layout_gravity="right"
                android:layout_margin="12dp"
                android:text="رقم مالك الونش"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_winch_owner_phone_txt"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black"
                android:text="رقم مالك الونش"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_margin="8dp"
                android:background="@color/color_gray_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/winch_request_item_cost_1_txt"
                android:layout_gravity="right"
                android:layout_margin="12dp"
                android:text="تكلفة الخدمة (بالجنيه)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_service_cost_txt"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black"
                android:text="التكلفة"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_margin="8dp"
                android:background="@color/color_gray_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <TextView
                android:id="@+id/winch_request_item_description_1_txt"
                android:layout_gravity="right"
                android:layout_margin="12dp"
                android:text="الوصف المرفق بطلبك"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_description_txt"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black"
                android:text="الوصف"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_margin="8dp"
                android:background="@color/color_gray_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/winch_request_item_time_1_txt"
                android:layout_gravity="right"
                android:layout_margin="12dp"
                android:text="وقت إنشاء الطلب"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_timestamp_txt"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black"
                android:text="الوقت"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_margin="8dp"
                android:background="@color/color_gray_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/winch_request_tracking_btn"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:text="تتبع طلبك"
                app:icon="@drawable/ic_baseline_map_24"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="wrap_content"/>
            <TextView
                android:drawableRight="@drawable/ic_baseline_info_24"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:gravity="right"
                android:layout_margin="8dp"
                android:text="عند قبول طلبك من طرف مالك الونش يمكنك تتبع حركة الونش إليك عن طريق الضغط على زر تتبع طلبك."
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


</com.google.android.material.card.MaterialCardView>