<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet_replytoquestion_linear_layout"
    android:background="@drawable/winch_bottom_sheet_backgroun"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/linear_layout_breaker"
        android:layout_width="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_height="5dp"/>
    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="إضافة رد على السؤال"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:background="@color/color_gray_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reply_et_to_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:inputType="text|textMultiLine"
                android:layout_marginBottom="24dp"
                android:hint="الرد"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="48dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/sendReplyButtonSheet"
        android:textStyle="bold"
        android:layout_margin="24dp"
        android:text="إرسال الرد"
        android:layout_height="wrap_content"/>
<!--    <com.javier.filterview.FilterView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->




<!--        />-->
</LinearLayout>